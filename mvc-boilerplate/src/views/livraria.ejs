<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Livraria - Dados</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>Livraria - Informa√ß√µes</h1>
    <a href="/livraria/novo" class="button">Cadastrar novo autor, livro ou venda</a>

    <h2>Autores</h2>
    <table id="autores-table" border="1" cellpadding="8" cellspacing="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Nacionalidade</th>
        </tr>
      </thead>
      <tbody>
        <% if (autores.length === 0) { %>
          <tr><td colspan="3">Nenhum autor cadastrado.</td></tr>
        <% } %>
        <% autores.forEach(autor => { %>
          <tr>
            <td><%= autor.id %></td>
            <td><%= autor.nome %></td>
            <td><%= autor.nacionalidade %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h2>Livros</h2>
    <table id="livros-table" border="1" cellpadding="8" cellspacing="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>T√≠tulo</th>
          <th>Ano</th>
          <th>Pre√ßo</th>
          <th>Autor</th>
          <th>A√ß√µes</th>
        </tr>
      </thead>
      <tbody>
        <% if (livros.length === 0) { %>
          <tr><td colspan="5">Nenhum livro cadastrado.</td></tr>
        <% } %>
        <% livros.forEach(livro => { %>
          <tr>
            <td><%= livro.id %></td>
            <td><%= livro.titulo %></td>
            <td><%= livro.ano_publicacao %></td>
            <td><%= livro.preco %></td>
            <td><%= livro.autor_nome || '-' %></td>
            <td class="actions">
              <button onclick="editarLivro('<%= livro.id %>')" class="btn-edit">‚úèÔ∏è Editar</button>
              <button onclick="deletarLivro('<%= livro.id %>')" class="btn-delete">üóëÔ∏è Excluir</button>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <h2>Vendas</h2>
    <table border="1" cellpadding="8" cellspacing="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Livro</th>
          <th>Data da Venda</th>
          <th>Quantidade</th>
        </tr>
      </thead>
      <tbody>
        <% if (typeof vendas === 'undefined' || !vendas || vendas.length === 0) { %>
          <tr><td colspan="4">Nenhuma venda registrada.</td></tr>
        <% } else { %>
          <% vendas.forEach(venda => { %>
            <tr>
              <td><%= venda.id %></td>
              <td><%= venda.livro_titulo || '-' %></td>
              <td><%= venda.data_venda ? new Date(venda.data_venda).toLocaleDateString() : '-' %></td>
              <td><%= venda.quantidade || 0 %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
    <!-- Debug info -->
    <% if (typeof vendas !== 'undefined') { %>
      <p style="display:none">Debug: <%= JSON.stringify(vendas) %></p>
    <% } %>
  </div>
  <script src="/js/livraria.js"></script>
</body>
</html>